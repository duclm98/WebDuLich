<div class="hero-wrap js-fullheight" style="background-image: url('../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-md-9 ftco-animate mb-5 pb-5 text-center text-md-left" data-scrollax=" properties: { translateY: '70%' }">
                <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">KHÁM PHÁ<br>NHỮNG<br>VÙNG ĐẤT MỚI</h1>
                <p data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tìm những nơi tuyệt vời để khám phá và trải nghiệm</p>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 hotel-single ftco-animate mb-5 mt-4">
    <h4 class="mb-5">Đăng kí tài khoản</h4>
    <div class="fields">
        <form method="POST" action="/users/signUp">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" name="ten" class="form-control" placeholder="Tên">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Nhập lại password">
                    </div>
                </div>
                <div class="col-md-12">
                    <p id="error">{{message}}</p>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" id="register" value="Đăng kí" class="btn btn-primary py-3">
                    </div>
                </div>
            </div>
        </form>     
    </div>
</div>