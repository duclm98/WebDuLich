<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
        <a href="#">Quản lí nhà hàng</a>
        </li>
        <li class="breadcrumb-item active">Xóa nhà hàng</li>
    </ol>

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
        <i class="fas fa-table"></i>
        Danh sách nhà hàng</div>
        <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Tên địa danh</th>
                    <th>Vị trí địa danh</th>
                    <th>Tên nhà hàng</th>
                    <th>Số điện thoại nhà hàng</th>
                    <th>Email nhà hàng</th>
                    <th>Địa chỉ nhà hàng</th>
                    <th>Giá trung bình của nhà hàng (VNĐ)</th>
                    <th>Mô tả về nhà hàng</th>
                    <th>Xóa</th>
                </tr>
                </thead>
                <tbody>
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{this.tenDiaDanh}}</th>
                    <td>{{this.viTriDiaDanh}}</td>
                    <td scope="row">{{this.ten}}</td>
                    <td>{{this.sdt}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.diaChi}}</td>
                    <td>{{this.gia}}</td>
                    <td>{{this.moTa}}</td>
                    <td><a href="/restaurant/delete/{{this._id}}">Xóa</a></td>
                </tr>
                {{/each}}
                {{/if}}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>