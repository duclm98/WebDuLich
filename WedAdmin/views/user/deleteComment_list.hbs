<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
        <a href="#">Quản lí nhận xét</a>
        </li>
        <li class="breadcrumb-item active">Xóa nhận xét nhận xét</li>
    </ol>

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
        <i class="fas fa-table"></i>
        Danh sách nhận xét</div>
        <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Tên địa danh</th>
                    <th>Tên người nhận xét</th>
                    <th>Email</th>
                    <th>Nhận xét</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{this.tenDiaDanh}}</th>
                    <td>{{this.tenUser}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.nhanXet}}</td>
                    <td><a href="/user/deleteComment/{{this._id}}">Xóa nhận xét</a></td>
                </tr>
                {{/each}}
                {{/if}}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>