<ol class="breadcrumb">
        <li class="breadcrumb-item">
        <a href="#">Quản lí địa danh</a>
        </li>
        <li class="breadcrumb-item active">Thêm địa danh</li>
</ol>

<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Thêm địa danh mới</div>
        <div class="card-body">
        <form method="POST" action="/place/add">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="ten" id="ten" class="form-control" placeholder="Tên địa danh" required="required" autofocus="autofocus">
                            <label for="ten">Tên địa danh</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="viTri" id="viTri" class="form-control" placeholder="Vị trí" required="required" autofocus="autofocus">
                            <label for="viTri">Vị trí</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="moTa" id="moTa" class="form-control" placeholder="Mô tả" required="required" autofocus="autofocus">
                            <label for="moTa">Mô tả</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="banDo" id="banDo" class="form-control" placeholder="Bản đồ" required="required" autofocus="autofocus">
                            <label for="banDo">Bản đồ</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="hinhAnh" id="hinhAnh" class="form-control" placeholder="Hình ảnh" required="required" autofocus="autofocus">
                            <label for="hinhAnh">Hình ảnh</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="video" id="video" class="form-control" placeholder="Video" required="required" autofocus="autofocus">
                            <label for="video">Video</label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">
                <i class="fa fa-plus"></i> Thêm địa danh
            </button>
        </form>
      </div>
    </div>
</div>