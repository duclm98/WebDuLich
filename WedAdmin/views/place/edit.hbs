<ol class="breadcrumb">
        <li class="breadcrumb-item">
        <a href="#">Quản lí địa danh</a>
        </li>
        <li class="breadcrumb-item active">Chỉnh sửa thông tin địa danh</li>
</ol>

<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Chỉnh sửa thông tin địa danh</div>
        <div class="card-body">
        <form method="POST" action="/place/edit/{{data._id}}">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="ten" id="ten" value="{{data.ten}}" class="form-control" placeholder="Tên địa danh" required="required" autofocus="autofocus">
                            <label for="ten">Tên địa danh</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="viTri" id="viTri" value="{{data.viTri}}" class="form-control" placeholder="Vị trí" required="required" autofocus="autofocus">
                            <label for="viTri">Vị trí</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="moTa" id="moTa" value="{{data.moTa}}" class="form-control" placeholder="Mô tả" required="required" autofocus="autofocus">
                            <label for="moTa">Mô tả</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="banDo" id="banDo" value="{{data.banDo}}" class="form-control" placeholder="Bản đồ (Chọn vào chia sẻ => Nhúng bản đồ => Lấy URL trong phần src)" required="required" autofocus="autofocus">
                            <label for="banDo">Bản đồ (Chọn vào chia sẻ => Nhúng bản đồ => Lấy URL trong phần src)</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="hinhAnh" id="hinhAnh" value="{{data.hinhAnh}}" class="form-control" placeholder="Hình ảnh (URL hình ảnh)" required="required" autofocus="autofocus">
                            <label for="hinhAnh">Hình ảnh (URL hình ảnh)</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-label-group">
                            <input type="text" name="video" id="video" value="{{data.video}}" class="form-control" placeholder="Video (Chọn chia sẻ => Nhúng => Lấy URL trong src)" required="required" autofocus="autofocus">
                            <label for="video">Video (Chọn chia sẻ => Nhúng => Lấy URL trong src)</label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">
                <i class="fa"></i> Chỉnh sửa
            </button>
        </form>
      </div>
    </div>
</div>